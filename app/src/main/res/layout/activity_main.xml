<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <EditText
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:textSize="50dp"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:layout_marginTop="5dp"
       android:id="@+id/calculation"
       android:textAlignment="textEnd"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintLeft_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:inputType="number"
       android:gravity="end" />


   <EditText
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:textSize="50dp"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:layout_marginTop="5dp"
       android:id="@+id/result"
       android:inputType="number"
       android:textAlignment="textEnd"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintLeft_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/calculation"
       android:layout_gravity="end" />

   <Button
      android:id="@+id/btnAC"
       android:layout_width="200dp"
       android:layout_height="80dp"
      android:backgroundTint="@color/white"
      android:textColor="@color/purple_700"
      android:text="AC"
      android:textStyle="bold"
      android:textSize="20dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/result"
      android:layout_marginLeft="5dp"/>


   <Button
       android:id="@+id/btnback"
       android:layout_width="200dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="backspace"
       android:textColor="@color/purple_700"
       android:textSize="20dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btnAC"
       app:layout_constraintTop_toTopOf="@id/btnAC"  />

   <Button
       android:id="@+id/btn7"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="7"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btnAC"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btn8"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="8"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btn7"
       app:layout_constraintTop_toTopOf="@id/btn7"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btn9"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="9"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       app:layout_constraintLeft_toRightOf="@id/btn8"
       app:layout_constraintTop_toTopOf="@id/btn8"
       android:textStyle="bold"
       android:layout_marginLeft="5dp"/>


   <Button
       android:id="@+id/btndiv"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="%"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btn9"
       app:layout_constraintTop_toTopOf="@id/btn9"
       android:layout_marginLeft="5dp"/>


   <Button
       android:id="@+id/btn6"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="6"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn7"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btn5"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="5"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btn6"
       app:layout_constraintTop_toTopOf="@id/btn6"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btn4"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="4"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       app:layout_constraintLeft_toRightOf="@id/btn5"
       app:layout_constraintTop_toTopOf="@id/btn5"
       android:textStyle="bold"
       android:layout_marginLeft="5dp"/>


   <Button
       android:id="@+id/btnmul"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="*"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btn4"
       app:layout_constraintTop_toTopOf="@id/btn4"
       android:layout_marginLeft="5dp"/>





   <Button
       android:id="@+id/btn3"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="3"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn6"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btn2"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="2"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btn3"
       app:layout_constraintTop_toTopOf="@id/btn3"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btn1"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="1"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       app:layout_constraintLeft_toRightOf="@id/btn2"
       app:layout_constraintTop_toTopOf="@id/btn2"
       android:textStyle="bold"
       android:layout_marginLeft="5dp"/>


   <Button
       android:id="@+id/btnsub"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="-"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btn1"
       app:layout_constraintTop_toTopOf="@id/btn1"
       android:layout_marginLeft="5dp"/>



   <Button
       android:id="@+id/btndot"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="."
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn3"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btnzero"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="0"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btndot"
       app:layout_constraintTop_toTopOf="@id/btndot"
       android:layout_marginLeft="5dp"/>

   <Button
       android:id="@+id/btnequal"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="="
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       app:layout_constraintLeft_toRightOf="@id/btnzero"
       app:layout_constraintTop_toTopOf="@id/btnzero"
       android:textStyle="bold"
       android:layout_marginLeft="5dp"/>


   <Button
       android:id="@+id/btnadd"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:backgroundTint="@color/white"
       android:text="+"
       android:textColor="@color/purple_700"
       android:textSize="30dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toRightOf="@id/btnequal"
       app:layout_constraintTop_toTopOf="@id/btnequal"
       android:layout_marginLeft="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>